<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sensor1"
            android:layout_width="205dp"
            android:layout_height="350dp"
            android:gravity="center|bottom"
            android:text=""
            android:textColor="#1F1F1F"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/sensor2"
            android:layout_width="205dp"
            android:layout_height="350dp"
            android:gravity="center|bottom"
            android:text=""
            android:textColor="#1F1F1F"
            android:textSize="35dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="327dp"
        android:layout_centerHorizontal="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nsor2"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:text="Status Sensor1"
            android:textAlignment="center"
            android:textColor="#1F1F1F"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/sor1"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:text="Status sensor 2"
            android:textAlignment="center"
            android:textColor="#1F1F1F"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tanaman_set"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true">
        <Button
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:text="Tambah Tanaman"
            android:onClick="InputTanaman"/>
        <Button
            android:layout_width="205dp"
            android:layout_height="50dp"
            android:text="List Tanaman"
            android:onClick="ListTanaman"/>

    </LinearLayout>

</LinearLayout>