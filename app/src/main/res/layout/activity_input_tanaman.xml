<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/add">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="155dp"></LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input Tanaman"
            android:textAlignment="center"
            android:textColor="#1F1F1F"
            android:textSize="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Masukan nama tanaman"
            android:textAlignment="center"
            android:textColor="#1F1F1F"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/nama_tanaman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Nama Tanaman"
            android:textColor="#1F1F1F" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:text=""/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Masukan Inputan Fuzzy"
            android:textAlignment="center"
            android:textColor="#1F1F1F"
            android:textSize="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kering"
            android:textAlignment="center"
            android:textColor="#1F1F1F"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:text="0"
                android:inputType="number"
                android:id="@+id/kiri_kering"
                android:layout_width="136.67dp"
                android:layout_height="wrap_content"
                android:hint="Kiri"
                android:textAlignment="center"
                />
            <EditText
                android:text="0"
                android:inputType="number"
                android:id="@+id/tengah_kering"
                android:layout_width="136.67dp"
                android:layout_height="wrap_content"
                android:hint="Tengah"
                android:textAlignment="center"
                />
            <EditText
                android:text="0"
                android:inputType="number"
                android:id="@+id/kanan_kering"
                android:layout_width="136.67dp"
                android:layout_height="wrap_content"
                android:hint="Kanan"
                android:textAlignment="center"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text=""/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lembab"
            android:textAlignment="center"
            android:textColor="#1F1F1F"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:text="0"
                android:inputType="number"
                android:id="@+id/kiri_lembab"
                android:layout_width="136.67dp"
                android:layout_height="wrap_content"
                android:hint="Kiri"
                android:textAlignment="center"
                />
            <EditText
                android:text="0"
                android:inputType="number"
                android:id="@+id/tengah_lembab"
                android:layout_width="136.67dp"
                android:layout_height="wrap_content"
                android:hint="Tengah"
                android:textAlignment="center"
                />
            <EditText
                android:text="0"
                android:inputType="number"
                android:id="@+id/kanan_lembab"
                android:layout_width="136.67dp"
                android:layout_height="wrap_content"
                android:hint="Kanan"
                android:textAlignment="center"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text=""/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Basah"
            android:textAlignment="center"
            android:textColor="#1F1F1F"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:text="0"
                android:inputType="number"
                android:id="@+id/kiri_basah"
                android:layout_width="136.67dp"
                android:layout_height="wrap_content"
                android:hint="Kiri"
                android:textAlignment="center"
                />
            <EditText
                android:text="0"
                android:inputType="number"
                android:id="@+id/tengah_basah"
                android:layout_width="136.67dp"
                android:layout_height="wrap_content"
                android:hint="Tengah"
                android:textAlignment="center"
                />
            <EditText
                android:text="0"
                android:inputType="number"
                android:id="@+id/kanan_basah"
                android:layout_width="136.67dp"
                android:layout_height="wrap_content"
                android:hint="Kanan"
                android:textAlignment="center"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:gravity="center|bottom">
        <Button
            android:id="@+id/simpan_tanaman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SIMPAN"
            />
    </LinearLayout>
</LinearLayout>